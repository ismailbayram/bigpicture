{
    "ignore": [
        "web"
    ],
    "validators": [
        {
            "type": "no_import",
            "args": {
                "from": "/internal/config",
                "to": "*"
            }
        },
        {
            "type": "no_import",
            "args": {
                "from": "/internal/config",
                "to": "/internal/browser"
            }
        },
        {
            "type": "line_count",
            "args": {
                "module": "/internal/browser",
                "max": 100
            }
        },
        {
            "type": "instability",
            "args": {
                "module": "internal",
                "max": 0.1
            }
        }
    ]
}